module Main exposing (..)

import Html exposing (Html)
import Svg exposing (..)
import Svg.Attributes exposing (..)
import Time exposing (Time, millisecond, second)


main : Program Never Model Msg
main =
    Html.program
        { init = init
        , view = view
        , update = update
        , subscriptions = subscriptions
        }



--model


type alias Model =
    Time


init : ( Model, Cmd Msg )
init =
    ( 0, Cmd.none )



--update


type Msg
    = Tick Time


update : Msg -> Model -> ( Model, Cmd Msg )
update msg model =
    case msg of
        Tick newTime ->
            ( newTime, Cmd.none )



--subscription


subscriptions : Model -> Sub Msg
subscriptions model =
    Time.every millisecond Tick



--view


secondHand : Time -> Svg msg
secondHand model =
    let
        angle =
            turns (Time.inMinutes model)

        handX =
            toString (50 + 40 * cos angle)

        handY =
            toString (50 + 40 * sin angle)
    in
        line [ x1 "50", y1 "50", x2 handX, y2 handY, stroke "black" ] []


minuteHand : Time -> Svg msg
minuteHand model =
    let
        angle =
            degrees (toFloat ((floor (Time.inMinutes model) % 60) * 6) - 90)

        handX =
            toString (50 + 33 * cos angle)

        handY =
            toString (50 + 33 * sin angle)
    in
        line [ strokeWidth "3px", x1 "50", y1 "50", x2 handX, y2 handY, stroke "black" ] []


hourHand : Time -> Svg msg
hourHand model =
    let
        angle =
            degrees (toFloat ((floor (Time.inHours model) % 12) * 30) - 90)

        handX =
            toString (50 + 25 * cos angle)

        handY =
            toString (50 + 25 * sin angle)
    in
        line [ strokeWidth "5px", x1 "50", y1 "50", x2 handX, y2 handY, stroke "black" ] []


view : Model -> Html Msg
view model =
    svg [ viewBox "0 0 100 100", width "300px" ]
        [ circle [ cx "50", cy "50", r "45", fill "red" ] []
        , secondHand model
        , minuteHand model
        , hourHand model
        ]
